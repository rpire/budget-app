<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <header class="app-header">
    <%= link_to fa_icon('arrow-left'), root_path, class: 'back-arrow' %>

    <h1 class="page-title">Register</h1>

    <%= f.submit "Sign up", class: 'header-link' %>
  </header>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, placeholder: 'Full name' %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm password' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
