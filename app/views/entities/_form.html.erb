<%= form_with model: @entity do |f| %>
  <div class="field">
    <%= f.text_field :name, placeholder: 'Name' %>
  </div>

  <div class="field">
    <%= f.text_field :amount, placeholder: 'Amount (USD)' %>
  </div>

  <div class="select-field">
    <%= f.label :group_id, 'Category' %>
    <%= f.collection_select :group_id, current_user.groups, :id, :name %>
  </div>

  <div class="button-container">
    <%= f.submit 'Create transaction', class: 'second-button' %>
  </div>
<% end %>